{
  "_comment": "IMPORTANT: content_scripts.matches for auth-bridge must stay in sync with src/config.js ALLOWED_ORIGINS",
  "manifest_version": 3,
  "name": "Read Later Random",
  "version": "1.0.0",
  "description": "Save links and view them randomly one at a time",
  "permissions": ["storage", "activeTab", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Read Later Random"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://484-final-project-three.vercel.app/*",
        "http://localhost:5173/*",
        "http://localhost:3000/*"
      ],
      "js": ["auth-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "read-later-random@example.com"
    }
  }
}

