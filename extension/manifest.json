{
  "manifest_version": 3,
  "name": "Read Later Random",
  "version": "1.0.0",
  "description": "Save links and view them randomly one at a time",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.google.com/*",
    "https://*.googleapis.com/*",
    "https://*.gstatic.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Read Later Random"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://484-final-project-three.vercel.app/*",
        "http://localhost:5173/*",
        "http://localhost:3000/*"
      ],
      "js": [
        "auth-bridge.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.reddit.com/*",
        "*://*.youtube.com/*",
        "*://*.youtu.be/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.tiktok.com/*",
        "*://*.instagram.com/*"
      ],
      "js": [
        "link-interceptor.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "read-later-random@example.com"
    }
  }
}